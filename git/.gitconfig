# My git configuration file.
[user]
  email = gcauchon@gmail.com
  name = Guillaume Cauchon
  signingkey = DC13AB49F1B3C51A
[core]
  autocrlf = input
  excludesfile = /Users/gcauchon/.gitignore_global
  editor = nvim
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX 
  show = diff-so-fancy | less --tabs=4 -RFX 
[gpg]
  program = /usr/local/bin/gpg
[diff]
  noprefix = true
  tool = tig
  verbosity = 5
[commit]
  gpgsign = true
[merge]
  tool = diffmerge
  verbosity = 5
[alias]
  a = add -A
  c = commit -S -m
  ca = commit -S --amend
  s = status --untracked-files=all
  br = branch -vv
  bl = branch --list
  bd = branch -D
  co = checkout
  cb = checkout -b
  f = fetch
  fp = fetch --prune
  m = merge
  fm = pull
  unstage = reset HEAD
  rollback = reset --soft HEAD^1
  r = rebase
  rc = rebase --continue
  rs = rebase --skip
  ra = rebase --abort
  p = push
  ph = push -u origin HEAD
  pf = push --force-with-lease
  po = push origin
