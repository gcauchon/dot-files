" fullscreen {{{
set fuoptions=maxvert,maxhorz
"}}}
 
" GUI options {{{
set guioptions-=L
set guioptions-=l
set guioptions+=R
set guioptions-=r
set guioptions-=T
"}}}
 
" transparency  {{{
set transparency=5
"}}}

